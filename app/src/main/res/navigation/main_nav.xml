<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.eventbookingapp.splash_screen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_mainOnboardingFragment"
            app:destination="@id/mainOnboardingFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainOnboardingFragment"
        android:name="com.example.eventbookingapp.onboarding.MainOnboardingFragment"
        android:label="fragment_main_onboarding"
        tools:layout="@layout/fragment_main_onboarding" >
        <action
            android:id="@+id/action_mainOnboardingFragment_to_auth_nav"
            app:destination="@id/auth_nav" />
    </fragment>
    <include app:graph="@navigation/auth_nav" />
</navigation>